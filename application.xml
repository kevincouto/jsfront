<?xml version="1.0" encoding="UTF-8"?>
<application grap="2">
    <requires>
        <require src="JIDE.Action.js" />
        <require src="JIDE.ComponentDesigner.js" />
        <require src="custom.JSelector" />
    </requires>
    <sprites name="icons" width="16" height="16" image="images/icons_16x16.gif" />

    <toolbar>
        <button width="100" height="28" caption="New Project" onClick="actionNewProject"/>
        <button width="100" height="28" caption="Open Project"/>
        <separator />
        <button width="100" height="28" caption="New Module" onClick="actionNewModule"/>
    </toolbar>
    <container align="left" width="250">
        <panel align="top" height="200" caption="Module Tree">
            <treeview align="client" />
        </panel>
        <splitter align="top"/>
        <panel align="client" height="200" caption="Component Inspector">
            <tabpanel align="client">
                <container caption="Properties"></container>
                <container caption="Events"></container>
            </tabpanel>
        </panel>
        <splitter />
        <container name="tbpModules" align="client" style="{background:'#DDDDDD'}" border="true" scroll="true">
            <container name="ctnModule" width="800" height="600" top="10" left="10" border="true" background="#FFFFFF" />
        </container>
        <container align="right" width="250">
            <panel caption="Components" align="client">
                <list name="lstUI" align="client" template="<div>#{label}</div>" onMouseDown="lstUI_onMouseDown" />
            </panel>
        </container>
        <splitter align="right" />
    </container>
</application>    
    